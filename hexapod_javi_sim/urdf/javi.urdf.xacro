<?xml version="1.0" encoding="UTF-8" ?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="Hexapod">

    <!-- parameters -->
    <xacro:property name="pi" value="3.1415926535897931"/> 
    <xacro:property name="coxa_length" value="0.024"/>
    <xacro:property name="femur_length" value="0.10"/>
    <xacro:property name="tibia_length_x" value="0.146364"/>
    <xacro:property name="tibia_length_y" value="0.035"/>


    <link name="base_link"/>

    <!-- foot -->
    <joint name="base_floor_link" type="fixed">
        <origin xyz="0.0 0.0 -0.031029" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="base_floor_link" />
    </joint>
    <link name="base_floor_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.00001"/>
            <inertia
                ixx="1.0" ixy="0.0"  ixz="0.0"
                iyy="1.0" iyz="0.0"
                izz="1.0" />
        </inertial>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body_link"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="body_link">
        <visual>
            <origin xyz="-0.034138 0.204808 -0.031029" rpy="${pi/2} 0.0 0.0"/>
            <geometry>
                <mesh filename="package://hexapod_javi_sim/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="">
                <color rgba="0.7 0.7 0.7 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://hexapod_javi_sim/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="">
                <color rgba="0.7 0.7 0.7 1"/>
            </material>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.00001"/>
            <inertia
                ixx="1.0" ixy="0.0"  ixz="0.0"
                iyy="1.0" iyz="0.0"
                izz="1.0" />
        </inertial>
    </link>
    <gazebo reference="body_link">
        <material>Gazebo/Black</material>
    </gazebo>


    <!-- Joint properties-->
    <xacro:property name="joint_lower_limit" value="-${3.14}"/>
    <xacro:property name="joint_upper_limit" value="${3.14}"/>
    <xacro:property name="joint_effort" value="6.0"/>
    <xacro:property name="joint_velocity" value="0.524"/>

    

    <!-- Leg macro -->
    <xacro:macro name="leg" params="side position x y angle axis">

        <!-- leg position -->
        <joint name="leg_center_joint_${side}${position}" type="fixed">
            <origin xyz="${x} ${y} 0.0" rpy="0.0 0.0 0.0"/>
            <parent link="body_link"/>
            <child link="leg_center_${side}${position}"/>
        </joint>
        <link name="leg_center_${side}${position}">
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
                <mass value="0.00001"/>
                <inertia
                    ixx="1.0" ixy="0.0"  ixz="0.0"
                    iyy="1.0" iyz="0.0"
                    izz="1.0" />
            </inertial>
        </link>
        <!-- coxa -->
        <joint name="coxa_joint_${side}${position}" type="revolute">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${angle}"/>
            <parent link="leg_center_${side}${position}"/>
            <child link="coxa_${side}${position}"/>
            <axis xyz="0.0 0.0 1.0"/>
            <limit lower="${joint_lower_limit}" upper="${joint_upper_limit}" effort="${joint_effort}" velocity="${joint_velocity}"/>
        </joint>
        <transmission name="coxa_transmission_${side}${position}">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="coxa_joint_${side}${position}">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
            <actuator name="coxa_motor_${side}${position}">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>
        <link name="coxa_${side}${position}">
            <visual>
                <origin xyz="0.012 0.0 0.0" rpy="0.0 0.0 ${pi/2}"/>
                <geometry>
                    <mesh filename="package://hexapod_javi_sim/meshes/coxa_link.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <material name="">
                    <color rgba="0.7 0.7 0.7 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.012 0.0 0.0" rpy="0.0 0.0 ${pi/2}" />
                <geometry>
                    <mesh filename="package://hexapod_javi_sim/meshes/coxa_link.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <material name="">
                    <color rgba="0.7 0.7 0.7 1" />
                </material>
            </collision>
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
                <mass value="0.00001"/>
                <inertia
                    ixx="1.0" ixy="0.0"  ixz="0.0"
                    iyy="1.0" iyz="0.0"
                    izz="1.0" />
            </inertial>
        </link>
        <gazebo reference="coxa_${side}${position}">
            <material>Gazebo/Purple</material>
        </gazebo>

        <!-- femur -->
        <joint name="femur_joint_${side}${position}" type="revolute">
            <origin xyz="${coxa_length} 0.0 0.0" rpy="-${pi/2} ${pi/2} 0.0"/>
            <parent link="coxa_${side}${position}"/>
            <child link="femur_${side}${position}"/>
            <axis xyz="0.0 0.0 ${axis}"/>
            <limit lower="${joint_lower_limit}" upper="${joint_upper_limit}" effort="${joint_effort}" velocity="${joint_velocity}"/>
        </joint>
        <transmission name="femur_transmission_${side}${position}">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="femur_joint_${side}${position}">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
            <actuator name="femur_motor_${side}${position}">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>
        <link name="femur_${side}${position}">
            <visual>
                <origin xyz="0.066 -0.09827 -0.024054" rpy="0.0 0.0 ${-pi/2}"/>
                <geometry>
                    <mesh filename="package://hexapod_javi_sim/meshes/femur_link.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <material name="">
                    <color rgba="0.7 0.7 0.7 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.066 -0.09827 -0.024054" rpy="0.0 0.0 ${-pi/2} " />
                <geometry>
                    <mesh filename="package://hexapod_javi_sim/meshes/femur_link.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <material name="">
                    <color rgba="0.7 0.7 0.7 1" />
                </material>
            </collision>
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
                <mass value="0.00001"/>
                <inertia
                    ixx="1.0" ixy="0.0"  ixz="0.0"
                    iyy="1.0" iyz="0.0"
                    izz="1.0" />
            </inertial>
        </link>

        <!-- tibia -->
        <joint name="tibia_joint_${side}${position}" type="revolute">
            <origin xyz="0.0 -${femur_length} 0.0" rpy="${pi} 0.0 0.0"/>
            <parent link="femur_${side}${position}"/>
            <child link="tibia_${side}${position}"/>
            <axis xyz="0.0 0.0 ${axis}"/>
            <limit lower="${joint_lower_limit}" upper="${joint_upper_limit}" effort="${joint_effort}" velocity="${joint_velocity}"/>
        </joint>
        <transmission name="tibia_transmission_${side}${position}">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="tibia_joint_${side}${position}">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
            <actuator name="tibia_motor_${side}${position}">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>
        <link name="tibia_${side}${position}">
            <visual>
                <origin xyz="0.0185 0.030551 -0.002466" rpy="${-pi*3/4} ${pi/2} 0.0"/>
                <geometry>
                    <mesh filename="package://hexapod_javi_sim/meshes/tibia_link.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <material name="">
                    <color rgba="0.7 0.7 0.7 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0.0185 0.030551 -0.002466" rpy="${-pi*3/4} ${pi/2} 0.0" />
                <geometry>
                    <mesh filename="package://hexapod_javi_sim/meshes/tibia_link.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <material name="">
                    <color rgba="0.7 0.7 0.7 1" />
                </material>
            </collision>
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
                <mass value="0.00001"/>
                <inertia
                    ixx="1.0" ixy="0.0"  ixz="0.0"
                    iyy="1.0" iyz="0.0"
                    izz="1.0" />
            </inertial>
        </link>
        <gazebo reference="tibia_${side}${position}">
            <material>Gazebo/DarkYellow</material>
        </gazebo>

        <!-- foot -->
        <joint name="foot_joint_${side}${position}" type="fixed">
            <origin xyz="${tibia_length_y} ${tibia_length_x} 0.0" rpy="0.0 0.0 0.0" />
            <parent link="tibia_${side}${position}" />
            <child link="foot_${side}${position}" />
        </joint>
        <link name="foot_${side}${position}">
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
                <mass value="0.00001"/>
                <inertia
                    ixx="1.0" ixy="0.0"  ixz="0.0"
                    iyy="1.0" iyz="0.0"
                    izz="1.0" />
            </inertial>
        </link>


    </xacro:macro>

    <!-- Build robot model -->
    <xacro:leg side="R" position="B" x="-0.07" y="-0.05" angle="-${pi*3/4}" axis="1"/>
    <xacro:leg side="R" position="M" x="0.0" y="-0.07" angle="-${pi/2}" axis="1"/>
    <xacro:leg side="R" position="F" x="0.07" y="-0.05" angle="-${pi/4}" axis="1"/>

    <xacro:leg side="L" position="B" x="-0.07" y="0.05" angle="${pi*3/4}" axis="-1"/>
    <xacro:leg side="L" position="M" x="0.0" y="0.07" angle="${pi/2}" axis="-1"/>
    <xacro:leg side="L" position="F" x="0.07" y="0.05" angle="${pi/4}" axis="-1"/>


</robot>
